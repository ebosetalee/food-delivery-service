{
  "name": "typescript-node-api",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "start": "node ./dist",
    "dev": "nodemon ./dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "watch:tsc": "rm -rf ./dist && tsc --watch -p ./tsconfig.json",
    "build:tsc": "tsc -p ./tsconfig.json",
    "test": "jest",
    "format": "prettier --config .prettierrc 'src/**/*.{js,ts,json,md}' --write",
    "prepare": "rm -rf '.husky' && husky install && npm run prepare:husky",
    "prepare:husky": "npx husky add .husky/pre-commit 'npm run format && npm run lint:fix && npm run test' "
  },
  "_moduleAliases": {
    "@root": "dist",
    "@v1": "dist/v1",
    "@routes": "dist/v1/routes",
    "@controller": "dist/v1/controllers"
  },
  "_moduleDirectories": [
    "node_modules_custom"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ebosetalee/typescript-node-API.git"
  },
  "keywords": [],
  "author": "Emmanuella <ertukpe@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ebosetalee/typescript-node-API/issues"
  },
  "homepage": "https://github.com/ebosetalee/typescript-node-API#readme",
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@types/bcrypt": "^5.0.0",
    "@types/hapi__joi": "^17.1.8",
    "@types/http-status": "^1.1.2",
    "@types/joi": "^17.2.3",
    "@types/module-alias": "^2.0.1",
    "@types/nodemailer": "^6.4.4",
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "http-status": "^1.5.2",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^6.3.3",
    "nodemailer": "^6.7.5",
    "winston": "^3.7.2"
